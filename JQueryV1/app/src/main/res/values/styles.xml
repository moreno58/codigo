<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="buttonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#AEC6CF</item>
    </style>



    <style name="AppTheme1" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_red_500</item>
        <item name="colorPrimaryDark">@color/md_red_700</item>
        <item name="colorAccent">@color/md_blue_A200</item>
        <item name="colorControlHighlight">@color/md_black_1000_25</item>​
        <item name="colorControlNormal">@color/md_black_1000_50</item>
        <item name="colorSwitchThumbNormal">@color/md_grey_200</item>
        <item name="android:colorForeground">@color/md_black_1000_75</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/md_red_500</item>​
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_indigo_500</item>
        <item name="colorPrimaryDark">@color/md_indigo_700</item>
        <item name="colorAccent">@color/md_pink_A200</item>
        <item name="colorControlHighlight">@color/md_pink_500_25</item>​
        <item name="colorControlNormal">@color/md_black_1000_50</item>
        <item name="colorSwitchThumbNormal">@color/md_grey_200</item>
        <item name="android:colorForeground">@color/md_black_1000_75</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/md_indigo_500</item>​
    </style>
    <style name="AppTheme3" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/md_indigo_500</item>
        <item name="colorPrimaryDark">@color/md_indigo_700</item>
        <item name="colorAccent">@color/md_pink_A200</item>
        <item name="colorControlHighlight">@color/md_pink_500_25</item>​
        <item name="colorControlNormal">@color/md_black_1000_50</item>
        <item name="colorSwitchThumbNormal">@color/md_grey_200</item>
        <item name="android:colorForeground">@color/md_black_1000_75</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/md_cyan_500</item>​
    </style>

    <style name="PageStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/bg_general</item>
        <item name="android:padding">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="h1">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">#444546</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="MenuButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#196DFF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:minHeight">45dp</item>
    </style>

    <style name="ExitButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#C11515</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:minHeight">45dp</item>
    </style>

    <style name="OrangeButton">
        <item name="android:background">#FFAB19</item>
        <item name="android:textColor">#444546</item>
    </style>

    <style name="RedButton">
        <item name="android:background">#C11515</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:minHeight">45dp</item>
    </style>

    <style name="BlueButton">
        <item name="android:background">#196DFF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:minHeight">45dp</item>
    </style>

    <style name="InputText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#CCCCCC</item>
        <item name="android:textColor">#222222</item>
        <item name="android:ems">10</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name= "MiEstilo"
        parent = "@android:style/TextAppearance.Medium">
        <item  name = "android:layout_width">fill_parent</item>
        <item  name = "android:layout_height">wrap_content</item>
        <item  name = "android:textColor">#00FF00</item>
        <item  name = "android:typeface">monospace</item>
    </style>

</resources>
