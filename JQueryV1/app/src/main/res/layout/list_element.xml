<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:background="#6C7B8B"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/icono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:scaleType="center"/>

    <TextView
        android:id="@+id/scorePlayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/icono"
        android:text="Player1 -  5"
  
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/scorePlayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/scorePlayer1"
        android:layout_alignRight="@+id/scorePlayer1"
        android:layout_below="@+id/scorePlayer1"
        android:text="Player2 - 3"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>